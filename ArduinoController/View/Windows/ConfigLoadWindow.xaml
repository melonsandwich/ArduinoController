<Window x:Class="ArduinoController.View.Windows.ConfigLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoController.View.Windows"
        mc:Ignorable="d"
        Title="ConfigLoadWindow" Height="200" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Выберите конфигурацию для загрузки:"/>
                <ComboBox Name="ComboBoxConfigSelection" Width="200"/>
            </StackPanel>
            <Button Name="ButtonLoadConfig" Content="Загрузить" Margin="0,10,0,0" Click="ButtonLoadConfig_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
