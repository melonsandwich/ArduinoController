<Window x:Class="ArduinoController.View.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoController.View.Windows"
        mc:Ignorable="d"
        Title="Настройки"
        Height="450" Width="800" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Label Content="Папка с конфигурациями: " Height="27"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,10">
            <Button Content="Открыть" Name="ButtonOpenConfigFolder" Height="27" Click="ButtonOpenConfigFolder_Click"/>
        </StackPanel>
    </Grid>
</Window>
