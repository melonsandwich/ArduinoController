                <ListBox DockPanel.Dock="Top" Height="363">
                    <ListViewItem Content="Default"/>
                </ListBox>
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Bottom">
                    <Button Content="Добавить" Width="120" Margin="0,0,10,0"/>
                    <Button Content="Удалить выбранное" Width="120"/>
                </StackPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox Header="Порты Arduino" Margin="10,10,10,10" Grid.Column="1" Grid.ColumnSpan="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

