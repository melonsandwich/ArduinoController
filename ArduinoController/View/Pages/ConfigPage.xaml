        <Button Name="ButtonSendToArduino" 
                        Content="Отправить на Arduino" 
                        Grid.ColumnSpan="1" 
                        Grid.Row="1"
                        Grid.RowSpan="1" Click="ButtonSendToArduino_Click"/>

        <Button Name="ButtonSaveConfig" 
                        Content="Сохранить конфигурацию" 
                        IsEnabled="False"
                        Grid.Column="1" 
                        Grid.Row="1"
                        Grid.RowSpan="1" Click="ButtonSaveConfig_Click"/>
    </Grid>
    </GroupBox>

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <Label Content="Тип пина: "/>
                <ComboBox Name="ComboBoxPinType">
                    <ComboBoxItem>Аналоговый</ComboBoxItem>
                    <ComboBoxItem>Цифровой</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Пин: "/>
                <TextBox Name="TextBoxPin" Height="22"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Режим: "/>
                <ComboBox Name="ComboBoxPinMode">
                    <ComboBoxItem>INPUT</ComboBoxItem>
                    <ComboBoxItem>OUTPUT</ComboBoxItem>
                    <ComboBoxItem>INPUT_PULLUP</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Значение: "/>
                <TextBox Name="TextBlockValue" Height="22"/>
            </StackPanel>
        </StackPanel>
        <Border Grid.Column="2" Background="Black">
            <TextBlock Name="TextBlockConsolePrompt" Foreground="White" FontFamily="Consolas"/>
        </Border>
